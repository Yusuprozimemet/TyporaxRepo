# Environment Variables for TyporaX Application
# Copy this file to .env and update the values with your actual credentials
# IMPORTANT: Never commit the .env file to version control

# Flask Configuration
FLASK_SECRET_KEY=your-super-secret-flask-key-here-change-this-in-production
FLASK_DEBUG=False

# Database Configuration
DATABASE_URL=sqlite:///users.db

# Google OAuth Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id-here

# GitHub OAuth Configuration  
# Get these from GitHub Developer Settings: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id-here
GITHUB_CLIENT_SECRET=your-github-client-secret-here

# Email Configuration
# For Gmail, use App Password (not regular password)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password

# URL Safe Timed Serializer Secret Key
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SERIALIZER_SECRET_KEY=your-url-safe-serializer-secret-key-change-this

# Server Configuration
PORT=5000

# Optional: OpenAI Configuration (if using AI features)
# OPENAI_API_KEY=your-openai-api-key-here

# Optional: Google Cloud Storage Configuration
USE_GCS=false
GCS_BUCKET=your-gcs-bucket-name
GOOGLE_CLOUD_CREDENTIALS=path/to/your/credentials.json